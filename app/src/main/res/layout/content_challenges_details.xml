<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_challenges_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.quinnbanet.sustaingame.ChallengesDetails"
    tools:showIn="@layout/activity_challenges_details"
    android:background="@color/Teal">

    <TextView
        android:text="Challenge:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTitle"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameContent"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/nameTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />
    <TextView
        android:text="Start Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sdTitle"
        android:layout_below="@+id/nameTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sdContent"
        android:layout_below="@+id/nameTitle"
        android:layout_toEndOf="@+id/sdTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />
    <TextView
        android:text="End Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edTitle"
        android:layout_below="@+id/sdTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edContent"
        android:layout_below="@+id/sdTitle"
        android:layout_toEndOf="@+id/edTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />
    <TextView
        android:text="Progress:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressTitle"
        android:layout_below="@+id/edTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressContent"
        android:layout_below="@+id/edTitle"
        android:layout_toEndOf="@+id/progressTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />
    <TextView
        android:text="Created By:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createdByTitle"
        android:layout_below="@+id/progressTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createdByContent"
        android:layout_below="@+id/progressTitle"
        android:layout_toEndOf="@+id/createdByTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="monospace"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="152dp"
        android:layout_height="154dp"
        app:srcCompat="@drawable/lightbulb"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Reuse  Recycle  Repeat "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/createdByTitle"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
